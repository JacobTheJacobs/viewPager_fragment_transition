<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Light application theme. -->
    <style name="LIGHT" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary2</item>
        <item name="colorAccent">@color/accent</item>
        <item name="backgroundcolor">@color/primary2</item>
        <item name="cardbackgroundcolor">@color/white</item>
        <item name="textcolor">@color/fiveth</item>
        <item name="tintcolor">@color/fiveth</item>
        <item name="buttoncolor">@color/forth</item>
        <item name="fabcolor">@color/fab</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="nightmode">NIGHT</item>
    </style>


    <!-- Dark application theme. -->
    <style name="DARK" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/accent</item>
        <item name="backgroundcolor">@color/first</item>
        <item name="cardbackgroundcolor">#424242</item>
        <item name="textcolor">@color/fiveth</item>
        <item name="tintcolor">@color/white</item>
        <item name="buttoncolor">@color/primary</item>
        <item name="fabcolor">@color/first</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="nightmode">DAY</item>
    </style>




    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>



    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
</resources>