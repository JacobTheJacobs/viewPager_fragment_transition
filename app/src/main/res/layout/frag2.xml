<androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/main_layout"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
tools:context=".Frag2"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto">
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:backgroundTint="@color/white"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <EditText
            android:id="@+id/RhymeSearch"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_border"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:elevation="10dp"
            android:hint="חיפוש חרוזים"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="22dp"
            android:singleLine="true"
            android:textColor="?attr/textcolor"
            android:textColorHint="@color/third"
            android:textDirection="rtl"
            app:tint="@null" />

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gv_rhm"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#FFF"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"></androidx.recyclerview.widget.RecyclerView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>

