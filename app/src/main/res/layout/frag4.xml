<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Frag3"
    android:id="@+id/frag4View"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Frag3"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name_input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:ems="10"
            android:layout_marginTop="13dp"
            android:hint="Song Name"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="?attr/textcolor"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/cardViewcreate"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/randomButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:backgroundTint="@color/second"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_note_add_24"
                    app:iconTint="?attr/tintcolor" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/shareButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:backgroundTint="@color/third"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_share_24"
                    app:iconTint="?attr/tintcolor" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:backgroundTint="@color/accent"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_delete_forever_24"
                    app:iconTint="?attr/tintcolor" />

            </LinearLayout>
        </LinearLayout>



        <EditText
            android:id="@+id/text_input2"

            android:layout_width="match_parent"
            android:layout_height="644dp"
            android:textColor="?attr/textcolor"
            android:layout_weight="1"
            android:background="@drawable/back"
            android:gravity="top"
            android:hint="You're Lyrics"
            android:inputType="textMultiLine"
            android:maxLines="300"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:scrollbars="vertical" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>